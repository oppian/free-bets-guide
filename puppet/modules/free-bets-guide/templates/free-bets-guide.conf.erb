DocumentRoot /deploy/docroot
ServerName www.free-bets-guide.com


RewriteEngine on
RewriteLogLevel 0


#RewriteRule ^/bets/(.*)/ /free_bets.php?n=$1 [L]
RewriteRule ^/bets/(.*)/ /free-bets/$1/ [L,R=301]

#RewriteRule ^/bets/(.*)$ /free_bets.php?n=$1 [L]
RewriteRule ^/bets/(.*)$ /free-bets/$1/ [L,R=301]

#RewriteRule ^/(.*)\s*free\ bets\.html$ /free_bets.php?n=$1 [L]
RewriteRule ^/(.*)\ free\ bets\.html$ /free-bets/$1/ [L,R=301]

#RewriteRule ^/articles/(.*)\.html$ /art.php?t=$1 [L]
RewriteRule ^/articles/Different\ Odds\ Display\ Styles/$ /articles/Different+Odds+Display+Styles/ [L,R=301]
RewriteRule ^/articles/(.*)\.html$ /articles/$1/ [L,R=301]

RewriteRule ^/articles/?$ /art_list.php [L]

#enforce www
#RewriteCond %{HTTP_HOST} !^www.free-bets-guide.com$ [NC]
#RewriteRule ^(.*)$ http://www.free-bets-guide.com$1 [L,R=301]

# /offers/category-name
# into offers.php?c=category-name
RewriteRule offers/(.*)/$ /offers.php?c=$1
RewriteRule offers/$ /offers.php

# free-bets/site-name/id-offer/ /offer_detail.php?OFFER_ID=id
RewriteRule free-bets/(.*)/(\d+)-(.*)/ /offer_detail.php?OFFER_ID=$2

# free-bets/site-name/ /free_bets.php?n=site-name
RewriteRule free-bets/(.*)/ /free_bets.php?n=$1


# /articles/id-title/ /art.php?id=id
RewriteRule articles/(.*)/ /art.php?t=$1

# /sites/category-name/
# into /sites.php?c=category-name
RewriteRule sites/ /sites.php
RewriteRule sites/(.*)/ /sites.php?c=$1

